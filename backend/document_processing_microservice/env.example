# Document Processing Microservice - Environment Variables

# === CONFIGURACIÓN GENERAL ===
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# === SQS (AWS) ===
DOCUMENT_PROCESSING_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/document-processing-queue
SQS_MAX_RETRIES=3
SQS_RETRY_DELAY=1

# === CALLBACKS ===
DOCUMENT_RESULTS_NOTIFICATION_URL=https://callback-service.com/results

# === LÍMITES ===
MAX_DOCUMENTS_PER_REQUEST=30
MAX_RETRIES=2
RETRY_DELAY_SECONDS=5
MAX_FILE_SIZE_MB=50

# === AZURE VISION (OCR) ===
AZURE_VISION_ENDPOINT=https://your-vision.cognitiveservices.azure.com/
AZURE_VISION_KEY=your_azure_vision_key
AZURE_VISION_TIMEOUT=30

# === MODELOS DE IA ===
DOCUMENT_IA_PROVIDER=deepseek  # deepseek o openai

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_API_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL_GENERATION=deepseek-chat
DEEPSEEK_MODEL_EXTRACTION=deepseek-chat

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_GENERATION=gpt-4
OPENAI_MODEL_EXTRACTION=gpt-4
OPENAI_MODEL_TRANSCRIPTION=whisper-1

# === BOOSTR (Identidad CL) ===
BOOSTR_API_KEY=your_boostr_api_key
BOOSTR_BASE_URL=https://api.boostr.cl
BOOSTR_TIMEOUT_SECONDS=15

# === WORKER ===
WORKER_PREFETCH_COUNT=3
WORKER_CONSUMER_TIMEOUT=30

# === MONITOREO ===
SENTRY_DSN=your_sentry_dsn
ENABLE_METRICS=true
