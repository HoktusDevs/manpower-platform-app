# Manpower Platform Configuration Example
# Copy this file to .env and update with your actual values

# AWS Configuration
VITE_USE_COGNITO=true
VITE_AWS_REGION=us-east-1

# Cognito Configuration (get from AWS Console)
VITE_USER_POOL_ID=your-user-pool-id
VITE_USER_POOL_CLIENT_ID=your-client-id  
VITE_IDENTITY_POOL_ID=your-identity-pool-id

# AWS-Native Configuration (Direct DynamoDB + AppSync)
VITE_USE_AWS_NATIVE=true
VITE_GRAPHQL_URL=https://your-appsync-api.appsync-api.region.amazonaws.com/graphql
VITE_GRAPHQL_API_ID=your-api-id
VITE_APPLICATIONS_TABLE=your-applications-table
VITE_DOCUMENTS_TABLE=your-documents-table

# AWS Services Configuration (No exposed endpoints - Direct SDK)
VITE_S3_DOCUMENTS_BUCKET=your-documents-bucket
VITE_KINESIS_STREAM_NAME=your-analytics-stream
VITE_CLOUDWATCH_LOG_GROUP=/aws/your-app/frontend

# App Configuration
VITE_APP_NAME=Manpower Platform
VITE_APP_VERSION=1.0.0

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,txt

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false
VITE_ENVIRONMENT=production